<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalAPP_Hasaki.Views.QuenMatKhau">
    <ContentPage.Content>
        <Grid Padding="10,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Entry x:Name="entry_matkhaumoi" Grid.Row="0" Placeholder="Mật khẩu mới" IsPassword="True"/>
            <Entry x:Name="entry_matkhaumoi_" Grid.Row="1" Placeholder="Nhập lại mật khẩu" IsPassword="true"/>
            <Button x:Name="button_update" Grid.Row="3" Text="CẬP NHẬP" BackgroundColor="Green" Clicked="click_quenmatkhau"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>